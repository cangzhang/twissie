{
  "manifest_version": 2,
  "name": "Twissie",
  "description": "A Twitter client",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}